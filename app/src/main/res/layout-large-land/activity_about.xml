<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="navatrana.projecttakenote.About">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/txtTitle"
        android:textColor="@color/primary_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/imgAboutIcon"
        android:src="@mipmap/ic_launcher"
        style="@style/AboutIcon"
        android:contentDescription="@string/app_name"
        android:layout_below="@+id/txtVersion"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtVersion"
        android:text="@string/version"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true" />


    <WebView
        android:id="@+id/webAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nava_com"
        android:id="@+id/textView3"
        android:layout_below="@+id/imgAboutIcon"
        android:layout_alignLeft="@+id/imgAboutIcon"
        android:layout_alignStart="@+id/imgAboutIcon" />

</RelativeLayout>