<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="navatrana.projecttakenote.BackupActivity">

    <LinearLayout
        android:id="@+id/Dll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/imgDropbox"
            android:src="@mipmap/ic_dropbox"
            style="@style/DIcon" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnDrop"
            android:text="@string/backupdropbox"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            style="@style/MyButtons"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnNow"
            android:text="@string/backupnow"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            style="@style/MyButtons"/>
    </LinearLayout>


    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_below="@+id/Dll"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtAccount"
        android:layout_below="@id/div1"
        style="@style/AccountText" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtEmail"
        android:layout_below="@+id/txtAccount"
        style="@style/EmailText"/>

</RelativeLayout>
